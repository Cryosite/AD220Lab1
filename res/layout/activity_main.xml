<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBackgroundColorDefault"
    tools:context="com.mti.ad220lab1.MainActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/btnMainSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/btnMainSelect"
        android:textColor="@color/defaultTextColor" />

    <TextView
        android:id="@+id/tvMainDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/tvMainDisplayDefault"
        android:textColor="@color/defaultTextColor" />

</RelativeLayout>

